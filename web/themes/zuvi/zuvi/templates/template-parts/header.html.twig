<header class="header">
  <div class="container">
    <div class="header-main">
    {% if page.site_branding %}
      <div class="site-brand">
        {{ page.site_branding }}
      </div> <!--/.site-branding -->
    {% endif %}
    {% if page.primary_menu or page.search_box %}
      <div class="header-main-right">
        {% if page.primary_menu %}
          <div class="mobile-menu" aria-label="Main Menu">
            <div class="menu-bar">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div> {# mobile-menu #}
          <div class="primary-menu-wrapper">
            <div class="menu-wrap">
              <div class="close-mobile-menu" aria-label="Close Main Menu"><i class="icon-close"></i></div>
              {{ page.primary_menu }}
            </div> <!-- /.menu-wrap -->
          </div> <!-- /.primary-menu-wrapper -->
        {% endif %}
        {% if page.search_box %}
          {% include '@zuvi/template-parts/search.html.twig' %}
        {% endif %}
      </div> <!-- /.header-right -->
    {% endif %}
    </div> <!-- /.header-main -->
  </div> <!-- /.container -->
  {% if not is_front %}
    {% include '@zuvi/template-parts/page_header.html.twig' %}
  {% endif %}
  {% if page.slider %}
    {% include '@zuvi/template-parts/slider.html.twig' %}
  {% endif %}
</header>
